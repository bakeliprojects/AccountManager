<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nogsdiva.accountmanager.activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir un compte"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="21dp"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSize="18sp"
        tools:textSize="18sp"
        android:textColor="@color/colorPrimary" />

    <Button
        android:text="@string/savingaccount"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/btn2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:paddingRight="30dp" />

    <Button
        android:text="@string/businessaccount"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn2"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2"
        android:layout_marginTop="51dp"
        android:id="@+id/btn3"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:paddingRight="10dp" />

    <Button
        android:text="@string/checkingaccount"
        android:layout_height="70dp"
        android:id="@+id/btn1"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_width="300dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark" />
</RelativeLayout>
